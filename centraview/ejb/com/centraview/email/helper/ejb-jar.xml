<ejb-jar>
    <enterprise-beans>
      <session>
	<ejb-name>EmailHelper</ejb-name>
	
	<home>com.centraview.email.helper.EmailHelperHome</home>
	<remote>com.centraview.email.helper.EmailHelper</remote>
	<ejb-class>com.centraview.email.helper.EmailHelperEJB</ejb-class>
	<local-home>com.centraview.email.helper.EmailHelperLocalHome</local-home>
	<local>com.centraview.email.helper.EmailHelperLocal</local>
  	
	<session-type>Stateless</session-type>
	<transaction-type>Bean</transaction-type>
        

      </session>
    </enterprise-beans>

  </ejb-jar>