<?xml version="1.0"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
   "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
	<enterprise-beans>
		<session>
			<ejb-name>SyncMail</ejb-name>
			<local-home>com.centraview.email.syncemail.SyncMailLocalHome</local-home>
			<local>com.centraview.email.syncemail.SyncMailLocal</local>
			<ejb-class>com.centraview.email.syncemail.SyncMailEJB</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
	</enterprise-beans>
</ejb-jar>
